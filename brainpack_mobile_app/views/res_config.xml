<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="webservice_view_general_configuration" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.webservice</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@data-key='website']" position="inside">
                    <h2>Webservice Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" id="domain_setting">
                            <div class="o_setting_right_pane">
                                <field name="webservice_id" invisible="1" />
                                <div name="webservice_configuration">
                                    <b>Webservice Configuration</b>
                                    <button type="object" name="open_webservice_conf" string="Configuration" class="oe_inline oe_link" icon="fa-cogs"/>
                                </div>
                            </div>
                        </div>
                    </div>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>