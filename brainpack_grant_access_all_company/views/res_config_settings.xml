<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_base_url" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth.ldap</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//div[hasclass('app_settings_block')]" position="inside">
                <div id="company_base_url">
                    <h2>Company Base Url</h2>
                    <div class="row mt16 o_settings_container" name="brainpack_grant_access_all_company">
                        <div class="col-12 col-lg-6 o_setting_box" id="base_url_setting">
                            <div class="o_setting_right_pane">
                                <label for="base_url"/>
                                <field name='base_url'/>
                            </div>
                        </div>
                    </div>
                </div>
           </xpath>
        </field>
    </record>
</odoo>